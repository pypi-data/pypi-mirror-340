<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_custom_info">
        <field name="name">product.custom.info</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page name="custom_data" string="Custom Information">
                    <group>
                        <field
              name="product_zone"
              options='{"no_quick_create": True}'
            />
                        <field
              name="product_tier"
              options='{"no_quick_create": True}'
            />
                        <field
              name="product_type"
              options='{"no_quick_create": True}'
            />
                        <field
              name="product_climate"
              options='{"no_quick_create": True}'
            />
                        <field
              name="product_color"
              options='{"no_quick_create": True}'
            />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

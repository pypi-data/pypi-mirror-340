# --- API 设置 ---
# 一言 API 的基础 URL
API_URL="https://v1.hitokoto.cn"

# --- 默认句子类型 ---
# 默认获取的句子类型，留空表示随机获取所有类型
DEFAULT_TYPE=""

# --- 用户交互设置 ---
# 触发插件的命令别名，使用英文逗号分隔
COMMAND_ALIASES="一言,hitokoto"

# 是否在私聊中启用插件 (true/false)
ENABLE_PRIVATE_CHAT=true

# 是否在群聊中启用插件 (true/false)
ENABLE_GROUP_CHAT=true

# --- 频率限制 (单位：秒) ---
# 私聊中的冷却时间
RATE_LIMIT_PRIVATE=5

# 群聊中的冷却时间
RATE_LIMIT_GROUP=10

# --- 黑白名单设置 ---
# 是否启用白名单模式 (true/false)，启用后只有白名单内的用户/群组可以使用
# 注意：白名单和黑名单不能同时启用
ENABLE_WHITELIST=false

# 是否启用黑名单模式 (true/false)
ENABLE_BLACKLIST=false

# 白名单用户ID列表，使用英文逗号分隔
WHITELIST_USERS=[]

# 黑名单用户ID列表，使用英文逗号分隔
BLACKLIST_USERS=[]

# 白名单群组ID列表，使用英文逗号分隔
WHITELIST_GROUPS=[]

# 黑名单群组ID列表，使用英文逗号分隔
BLACKLIST_GROUPS=[]

# --- 收藏功能设置 ---
# 每个用户最多可以收藏的句子数量
MAX_FAVORITES_PER_USER=100

# 收藏列表每页显示的句子数量
FAVORITES_PER_PAGE=5

# 收藏的有效时间（秒）
FAVORITE_TIMEOUT=60

# 单次请求查看收藏详情的最大数量
MAX_DETAILS_PER_REQUEST=3
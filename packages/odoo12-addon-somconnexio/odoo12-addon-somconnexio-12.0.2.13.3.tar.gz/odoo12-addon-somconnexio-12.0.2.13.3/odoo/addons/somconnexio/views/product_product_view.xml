<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_product_tree_inherited_view" model="ir.ui.view">
        <field name="name">product.product.tree.inherited.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="/tree/field[@name='name']" position="replace">
                <field name="showed_name"/>
            </xpath>
        </field>
    </record>
        <record id="product_template_form_inherited_view" model="ir.ui.view">
        <field name="name">product.product.form.inherited.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="showed_name"/>
                <field name="root_categ_id" invisible="1"/>
            </field>
            <xpath expr="/form/sheet/notebook/page[@name='general_information']" position="after">
                <page string="Attributes" name="attributes">
                    <group>
                        <field name="public" readonly="1"/>
                        <field name="has_custom_products_to_change_tariff"/>
                        <field name="without_fix" />
                        <field name="contract_as_new_service" />
                        <field name="has_sharing_data_bond"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="/form/sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
            <page name="invoicing" position="after">
              <page string="Available products for change tariff" attrs="{'invisible': [('has_custom_products_to_change_tariff', '=', False)]}">
                <group string="Available products for change tariff">
                  <field
                    name="products_available_change_tariff"
                    domain="[('root_categ_id', '=', root_categ_id)]"/>
                </group>
              </page>
            </page>
        </field>
    </record>

</odoo>

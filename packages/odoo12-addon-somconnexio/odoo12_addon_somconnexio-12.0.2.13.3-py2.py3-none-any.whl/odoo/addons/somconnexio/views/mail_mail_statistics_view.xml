<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="mail_mail_statistics_view_tree" model="ir.ui.view">
    <field name="name">	mail.mail.statistics.tree</field>
    <field name="model">mail.mail.statistics</field>
    <field name="arch" type="xml">
        <tree string="Mail Statistics" create="0" default_order='sent desc'>
            <field name="email"/>
            <field name="mass_mailing_id"/>
            <field name="sent"/>
            <field name="opened"/>
            <field name="clicked"/>
            <field name="replied"/>
            <field name="exception"/>
            <field name="bounced"/>
        </tree>
    </field>
  </record>
</odoo>


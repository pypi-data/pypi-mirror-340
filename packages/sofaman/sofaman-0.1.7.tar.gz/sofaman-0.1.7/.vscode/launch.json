{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Main.py PUML",
            "type": "debugpy",
            "request": "launch",
            "program": "sofaman/sofamangen.py",
            "console": "integratedTerminal",
            "args": [
                "--input=tests/test_cases/full_all.sofa",
                "--output=out.puml",
                "--type=puml",
                "build"
            ]
        },
        {
            "name": "Python Debugger: Main.py XMI",
            "type": "debugpy",
            "request": "launch",
            "program": "sofaman/sofamangen.py",
            "console": "integratedTerminal",
            "args": [
                "--input=tests/test_cases/full_all.sofa",
                "--output=out.xmi",
                "--type=xmi",
                "build"
            ]
        },
        {
            "name": "Python Debugger: Main.py XMI with ids_file",
            "type": "debugpy",
            "request": "launch",
            "program": "sofaman/sofamangen.py",
            "console": "integratedTerminal",
            "args": [
                "generate",
                "tests/test_cases/full_all.sofa",
                "out.xmi",
                "--ids_file",
                "tests/test_cases/full_all_id.json"
            ]
        },
        {
            "name": "Python Debugger: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "sofaman/main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}
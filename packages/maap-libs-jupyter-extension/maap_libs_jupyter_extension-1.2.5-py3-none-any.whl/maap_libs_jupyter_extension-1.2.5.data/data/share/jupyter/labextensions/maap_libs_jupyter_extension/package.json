{
  "name": "maap_libs_jupyter_extension",
  "version": "1.2.5",
  "description": "Import MAAP tools and libraries easily into your Jupyter notebook.",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://github.com/MAAP-Project/maap-libs-jupyter-extension",
  "bugs": {
    "url": "https://github.com/MAAP-Project/maap-libs-jupyter-extension/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Marjorie Lucas",
    "email": "marjorie.j.lucas@jpl.nasa.gov"
  },
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,js,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/MAAP-Project/maap-libs-jupyter-extension.git"
  },
  "scripts": {
    "build": "jlpm build:lib && jlpm build:labextension:dev",
    "build:prod": "jlpm clean && jlpm build:lib && jlpm build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc --sourceMap",
    "clean": "jlpm clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:labextension": "rimraf maap_libs_jupyter_extension/labextension",
    "clean:all": "jlpm clean:lib && jlpm clean:labextension",
    "install:extension": "jlpm build",
    "start": "jupyter lab --config ui-tests/jupyter_server_test_config.py",
    "test": "jest --coverage",
    "test:ui": "jlpm playwright test --ui",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch ."
  },
  "dependencies": {
    "@jupyterlab/application": "^4.2.5",
    "@jupyterlab/apputils": "^4.2.5",
    "@jupyterlab/notebook": "^4.2.5",
    "@playwright/test": "^1.44.0",
    "react-toastify": "^8.2.0"
  },
  "peerDependencies": {
    "@types/react": "^18.3.1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^4.2.5",
    "@jupyterlab/testutils": "^4.2.5",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.12.12",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "~5.4.5"
  },
  "sideEffects": [
    "style/*.css",
    "style/index.js"
  ],
  "styleModule": "style/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "maap_libs_jupyter_extension/labextension",
    "_build": {
      "load": "static/remoteEntry.df617213481178fd8aba.js",
      "extension": "./extension",
      "style": "./style"
    }
  },
  "jupyter-releaser": {
    "hooks": {
      "before-build-npm": [
        "python -m pip install jupyterlab>=4.0.0,<5",
        "jlpm"
      ],
      "before-build-python": [
        "jlpm clean:all"
      ]
    }
  }
}

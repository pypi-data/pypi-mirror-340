<odoo>
    <record
        id="mrp_production_category_notes_product_category_form_view"
        model="ir.ui.view"
    >
        <field
            name="name"
        >mrp.production.category.notes.product.category.form.view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="mrp_notes" widget="html" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>

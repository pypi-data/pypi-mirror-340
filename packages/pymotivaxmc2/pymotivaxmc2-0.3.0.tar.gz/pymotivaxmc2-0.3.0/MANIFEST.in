# Exclude virtual environments
exclude venv/
exclude env/
exclude .env/
exclude bin/
exclude include/
exclude lib/
exclude lib64/
exclude pyvenv.cfg

# Exclude IDE folders
exclude .idea/
exclude .vscode/

# Exclude distribution files
exclude dist/
exclude build/
exclude *.egg-info/ 
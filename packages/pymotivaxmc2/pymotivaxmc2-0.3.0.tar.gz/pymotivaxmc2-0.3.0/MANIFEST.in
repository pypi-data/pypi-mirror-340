# Include license and readme file
include LICENSE
include README.md
include requirements.txt
exclude async.md

# Include package data
recursive-include pymotivaxmc2 *.py

# Exclude git files
exclude .gitignore
exclude .gitattributes
exclude .git/
exclude .git*

# Exclude test files and directories
exclude test_command.py
exclude test_udp.py
exclude pymotivaxmc2_demo.ipynb
exclude tests/
